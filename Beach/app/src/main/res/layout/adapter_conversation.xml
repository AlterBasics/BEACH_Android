<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlContactRow"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="@dimen/dimen_size_10"
        android:paddingRight="@dimen/dimen_size_10"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/imageRelLayout"
            android:layout_width="@dimen/dimen_size_60"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivContactImage"
                android:layout_width="@dimen/dimen_size_60"
                android:layout_height="@dimen/dimen_size_60"
                android:layout_centerInParent="true"
                 />

            <TextView
                android:id="@+id/userPresence"
                android:layout_width="@dimen/dimen_size_15"
                android:layout_height="@dimen/dimen_size_15"
                android:layout_alignBottom="@id/ivContactImage"
                android:layout_alignEnd="@id/ivContactImage"
                android:layout_marginRight="@dimen/dimen_size_10"
                android:background="@drawable/circle_grey" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_toRightOf="@+id/imageRelLayout"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_size_10"
                android:maxLines="1"
                android:text="Rahul Gandhi"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textview_size_16" />

            <TextView
                android:id="@+id/chatMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_size_5"
                android:layout_toRightOf="@+id/userName"
                android:gravity="right"
                android:maxLines="1"
                android:text="9.36 p.m"
                android:textColor="@color/grey"
                android:textSize="@dimen/textview_size_14" />

            <TextView
                android:id="@+id/chatMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:maxLines="1"
                android:text="Loren ipseum idolore"
                android:textColor="@color/grey"
                android:textSize="@dimen/textview_size_14" />

            <TextView
                android:id="@+id/chatMsgCount"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/chatMsg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_size_5"
                android:background="@drawable/count_corner"
                android:gravity="center"
                android:maxLines="1"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/textview_size_14"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_1"
            android:background="@color/grey1"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dimen_size_4">
            </View>

    </RelativeLayout>

</LinearLayout>