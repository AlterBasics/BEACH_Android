<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlContactRow"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_size_10"
        android:paddingRight="@dimen/dimen_size_10">

        <RelativeLayout
            android:id="@+id/imageRelLayout"
            android:layout_width="@dimen/dimen_size_60"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivContactImage"
                android:layout_width="@dimen/dimen_size_60"
                android:layout_height="@dimen/dimen_size_60"
                android:layout_centerInParent="true" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageRelLayout"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen_size_10"
            android:text="Mr. XYZ"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_1"
            android:layout_alignParentBottom="true"
            android:background="@color/grey1"
            android:paddingBottom="@dimen/dimen_size_4" />


    </RelativeLayout>

</LinearLayout>